{
  "name": "triboar-rolebot",
  "version": "1.0.0",
  "description": "Discord bot for managing Triboar Guildhall subscription roles",
  "main": "src/bot.js",
  "type": "module",
  "scripts": {
    "start": "node src/bot.js",
    "dev": "nodemon src/bot.js",
    "lint": "eslint src/**/*.js",
    "docker:dev": "docker-compose up",
    "docker:dev:build": "docker-compose up --build",
    "docker:dev:down": "docker-compose down",
    "docker:dev:logs": "docker-compose logs -f rolebot",
    "docker:dev:shell": "docker-compose exec rolebot sh",
    "docker:prod:build": "docker build -t triboar-rolebot .",
    "docker:prod:run": "docker run -d --name triboar-rolebot --env-file .env -p 3001:3001 --restart unless-stopped triboar-rolebot"
  },
  "keywords": [
    "discord",
    "bot",
    "subscription",
    "roles"
  ],
  "author": "Triboar Guild",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.14.0",
    "dotenv": "^16.4.5",
    "axios": "^1.6.5",
    "node-cron": "^3.0.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "express": "^4.18.2",
    "pino-http": "^8.6.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0"
  }
}
